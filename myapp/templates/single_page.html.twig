    <script type="text/javascript" src="RecordsController.js"></script>

</head>
<body ng-app="app">
<div class="container">
    <div ng-controller="RecordsController">
        <h1>Records controller</h1> <br>

        <div class="row col-md-4">
            <form>
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" ng-model="name" id="name">
                </div>
                <div class="form-group">
                    <label>Price</label>
                    <input type="text" class="form-control" id="name">
                </div>
                <button type="submit" class="btn btn-primary" ng-click="submit()">Submit</button>
            </form>
        </div>


        <table class="table table-bordered">
            <tr>

                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
            </tr>
            <tr ng-repeat="(key, record) in records">
                <td>// record.id //</td>
                <td>// record.name //</td>
                <td>// record.price //</td>
            </tr>
        </table>
    </div>
</div>


</body>
</html>